{
    "builds": [
        {
            "src": "api/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb", "runtime": "python3.12" }
        },
        {
            "src": "index.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/wsgi.py"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}
